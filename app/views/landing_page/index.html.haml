.row.lp-top-row(style="z-index:2")
  .large-12.columns
    - if !current_user || current_user.guest
      .authentication-box.text-center.hide-for-medium-down
        %dl.tabs(data-tab="true")
          %dd
            = link_to '#login', 'data-link' => 'login' do
              = t('.login')
          %span.link-delimiter
            &#47;
          %dd.active
            = link_to '#signup', 'data-link' => 'signup' do
              = t('.signup')
        .tabs-content.text-left
          .content#login
            = render 'lp_login', user: @user
          .content.active#signup
            = render 'lp_signup', :user => @user

.title-row.bg-creme
  .row.collapse-large-only
    .medium-12.columns.text-center
      %span.lp-logo.icon-vr-logo
      %h1.headline
        = t('.headline').html_safe
      %h2.subheadline
        = t('.subheadline').html_safe
      %h3.subheadline-2
        = t('.subheadline_2').html_safe

.about-summary.bg-blue
  .row
    .small-4.columns.text-center
      = image_tag '/images/illu1.jpg'
      %h4= t('.title_illu_1')
      %p= t('.text_illu_1')
    .small-4.columns.text-center
      = image_tag '/images/illu2.jpg'
      %h4= t('.title_illu_2')
      %p= t('.text_illu_2')
    .small-4.columns.text-center
      = image_tag '/images/illu3.jpg'
      %h4= t('.title_illu_3')
      %p= t('.text_illu_3')


.talks.bg-creme.collapse
  - unless @talks_live.empty?
    %br/
    %br/
    .row.collapse-large-only
      .small-12.columns.text-center
        .title-box
          = link_to live_talks_url do
            %h3= t('.now_live')
        %ul.list-style-type-none
          = render collection: @talks_live, partial: 'shared/talk_medium_box'
        = link_to t('.see_all'), live_talks_url, class: 'see-all-link'

  .row.collapse-large-only
    .large-12.columns
      %ul.medium-block-grid-3.small-block-grid-1.text-center
        - unless @talks_featured.empty?
          %li
            .title-box
              = link_to featured_talks_url do
                %h3= t('.featured')
            %ul.list-style-type-none
              = render collection: @talks_featured, partial: 'shared/talk_small_box', :locals => { color: 'box-transparent' }
            = link_to t('.see_all'), featured_talks_url, class: 'see-all-link'

        %li
          .title-box
            = link_to popular_talks_url do
              %h3= t('.popular')
          %ul.list-style-type-none
            = render collection: @talks_popular, partial: 'shared/talk_small_box', :locals => { color: 'box-grey' }
          = link_to t('.see_all'), popular_talks_url, class: 'see-all-link'

        %li
          .title-box
            = link_to recent_talks_url do
              %h3=t('.recent')
          %ul.list-style-type-none
            = render collection: @talks_recent, partial: 'shared/talk_small_box', :locals => { color: 'box-black' }
          = link_to t('.see_all'), recent_talks_url, class: 'see-all-link'

.manifest.bg-blue
  .row
    .large-12.columns.text-center
      %span.icon-vr-logo
      = t('.manifest').html_safe

