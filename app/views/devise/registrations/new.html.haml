= simple_form_for( resource,
                   as: resource_name,
                   url: registration_path(resource_name) ) do |f|
  = f.input :referrer, as: :hidden
  .input-block
    .form-content-block.row
      .medium-10.medium-centered.columns
        .title-block
          %h2= t('.sign_up')
        .row
          .medium-6.columns
            = f.input :firstname
          .medium-6.columns
            = f.input :lastname
        = f.input :email
        .row
          .medium-6.columns
            = f.input :password
          .medium-6.columns
            = f.input :password_confirmation
        .row
          .medium-12.columns
            = f.input :timezone, as: :time_zone, priority: User::PRIOTZ
        = f.input :accept_terms_of_use, as: :boolean, boolean_style: :inline,
                  label: t('simple_form.labels.user.accept_terms_of_use').html_safe
        = f.button :submit, t('.continue').html_safe, class: 'button-vr button-signup'
        %br/
        %br/
        %hr/
        = render partial: 'devise/shared/social_network_connects',
                 locals: { action: 'register' }
        .clearfix
        %hr/
        .links-box
          = render(:partial => "/devise/shared/links")
        %br/
        %br/
