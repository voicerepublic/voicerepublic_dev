%section#claim.dark
  .row
    %header
      %h1= t('.pair_device')

%section.light
  .api-container.row.clearfix
    .container.medium-10.medium-offset-1.large-8.large-offset-2.columns.text-left
      %h2= t('.devices_found', count: @devices.count, ip: request.remote_ip)
      %ul
        - @devices.each do |device|
          %li= device.type
