.header-block(style="background-image: url(#{@venue.image.url(:medium)})"
  data-show-upload="#venue_image")

  .row
    .large-10.medium-10.large-centered.medium-centered.columns
      %h2= form_title
  .row
    .large-10.medium-10.large-centered.medium-centered.columns
      = f.error_notification
  .row
    .large-10.medium-10.large-centered.medium-centered.columns
      = f.input :title, placeholder: t('.title')
      = f.input :teaser, rows: 2, placeholder: t('.teaser')
      = render partial: 'shared/wysihtml5_toolbar', locals: { id: 'venue-toolbar' }
      = f.input :description, rows: 4, placeholder: t('.description'),
        input_html: { 'data-wysiwyg' => '#venue-toolbar' }
      = f.input :tag_list, :class => 'tagList', placeholder: t('.tag_list')

.row
  .large-10.medium-10.large-centered.medium-centered.columns
    = f.file_field :image # will be hidden
