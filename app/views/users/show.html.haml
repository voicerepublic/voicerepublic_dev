- content_for :title do
  = t('.title', username: @user.name)

.header-block(style="background-image: url(#{@user.header.try(:url)})")

  - if can? :manage, @user
    .generic-action-bar.row.collapse
      .large-12.columns
        %ul.button-group.right
          %li= link_to t('.edit_user'), [:edit, @user], class: 'button-standard'

  .header-box.row
    .large-12.columns.text-center
      - count = @user.participations.count
      -# .talks-joined= t('.talk_joined', count: count, default: '%{count} Talks joined')
      .avatar
        - img_size = 120
        .avatar-image{style: "width:#{img_size}px;height:#{img_size}px"}
          = render partial: "shared/avatar_image", locals: { user: @user, img_size: 120 }
      %h2.user-name= @user.name
  .row.collapse-large-only
    .large-12.columns.text-center
      %dl.tabs.vr-tabs(data-tab='true')
        %dd.text-center.active
          %a(href="#about-me")
            %span.icon-description
            = t('.about_me')
        %dd.text-center
          %a(href="#my-venues")
            %span.icon-guide
            = t('.my-venues')
        -#
        -#%dd.text-center
        -#  %a(href="#schedule")
        -#    %i.fi-calendar
        -#    = t('.schedule')
        -#%dd.text-center
        -#  %a(href="#activity")= t('.activity')

.row.collapse-large-only
  .large-12.columns.tabs-content
    #about-me.content.active
      = raw @user.about

    #my-venues.content
      = render partial: 'shared/venue_medium_box', collection: @user.venues

