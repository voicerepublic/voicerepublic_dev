- content_for :title do
  = t('.title', username: @user.name)

.header-block(style="background-image: url(#{@user.header.try(:url)})")

  .header-box.row
    .large-12.columns.text-center
      - if can? :manage, @user
        .generic-actions-box
          = link_to "#", class: "action-toggle", title: 'Show Options', "data-toggle-stuff" => "#action-links-list" do
            %span.icon-cog
          %ul#action-links-list.list-style-type-none.hide-stuff
            %li= link_to t('.edit_user'), [:edit, @user]
              
      .avatar
        - img_size = 120
        .avatar-image{style: "width:#{img_size}px;height:#{img_size}px"}
          = render partial: "shared/avatar_image", locals: { user: @user, img_size: 120 }
      %h2.user-name= @user.name
  .row.collapse-large-only
    .large-12.columns.text-center
      %dl.tabs.vr-tabs(data-tab='true')
        %dd.text-center.active
          %a(href="#about")
            %span.icon-description
            = t('.about')
        %dd.text-center
          %a(href="#venues")
            %span.icon-guide
            = t('.venues')
        -#
        -#%dd.text-center
        -#  %a(href="#schedule")
        -#    %i.fi-calendar
        -#    = t('.schedule')
        -#%dd.text-center
        -#  %a(href="#activity")= t('.activity')

.row.collapse-large-only
  .large-12.columns.tabs-content
    #about.about-content.content.active
      = raw @user.about

    #venues.venues-content.content
      = render partial: 'shared/venue_medium_box', collection: @user.venues

