= simple_form_for(@user) do |f|
  .header-block(style="background-image: url(#{@user.header.try(:url)})" data-show-upload="user_header")
    .row
      .large-12.columns
        = f.error_notification
    .row.collapse
      .large-3.medium-3.columns
        - avatar_url = @user.avatar.try(:url)
        .user-portrait-img(style="background-image:url(#{avatar_url})" data-show-upload="user_avatar")
        %br/
        %br/
        %button.button(type="button" data-trigger-file-input="user_avatar") Select profile image
        = f.input :avatar, as: :file

      .large-5.medium-5.columns
        = f.input :firstname, :placeholder => 'First Name'
        = f.input :lastname, :placeholder => 'Last Name'
        = f.input :email, :placeholder => 'Email Address'
        = f.fields_for @user.account do |af|
          = af.input :timezone # TODO: make select box
          = af.input :website
        %button(data-enable-fields='#change-password input'
                data-replace-with='#change-password'
                data-trigger-on-error='#change-password'
                type='button')= t('.set_new_password')
        #change-password.panel.hide
          = f.input :password, disabled: true
          = f.input :password_confirmation, disabled: true
        -#= USER PROFILE HEADER (not verified by PO)
        = f.input :header, as: :file


      .large-4.medium-4.columns.text-center
        .row
          .small-4.columns
            or
          .small-8.columns
            %button.small Connect with Facebook
  .row.collapse
    .large-12.columns
      %h2 About you
  .row.collapse
    .large-12.columns
      .user-textarea-box
        = f.fields_for @user.account do |af|
          = render partial: 'shared/wysihtml5_toolbar', locals: { id: 'about-textarea' }
          = af.input :about, rows: 10, placeholder: t('.about'),
            input_html: { 'data-wysiwyg' => '#about-textarea' }
  .row.collapse
    .large-12.columns
      = f.button :submit
      %a{href: "#"} or
      = link_to t('.cancel', :default => t("helpers.links.cancel")), user_path(:id => @user)
