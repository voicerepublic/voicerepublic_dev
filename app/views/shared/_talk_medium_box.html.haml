- talk = talk_medium_box

%li.talk-medium-box.box-grey
  .left-box
    = link_to [talk.venue, talk] do
      %img.talk-avatar{src: talk.image.thumb('181x131#nw').url}
  .right-box.text-left
    = link_to '&nbsp;', [talk.venue, talk], class: 'full-size-link'
    .breadcrumbs-box
      = link_to user_path(talk.user) do
        %span.icon-person
        %span.link-text= talk.user.name
      = link_to talk.venue do
        %span.icon-ellipsis
        %span.link-text= talk.venue.title
    %br/
    = link_to [talk.venue, talk], class: 'text-link' do
      .datetime
        = raw t('.date_start_end', date: l(talk.starts_at, format: :date_only_short),
          start_time: l(talk.starts_at, format: :time_only),
          end_time: l(talk.ends_at, format: :time_only))
      .title= talk.title.upcase
      .teaser
        = talk.teaser