%section#what-is-vr
  .row
    .medium-6.medium-offset-3.columns
      = naked_icon "logo"
      %h3= t('.headline')
      %p.lead.text-left
        = t('.text')
      = link_to t('.join_for_free'), new_user_registration_path, class: 'button hollow btn-white btn-hover-yellow'

