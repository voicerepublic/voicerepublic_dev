!!!
%html{:lang => "#{I18n.locale.to_s}"}
  %head
    %meta{:content => "text/html; charset=UTF-8", "http-equiv" => "Content-Type"}/
    %meta{:charset => "utf-8"}/
    %meta{:content => "width=device-width, initial-scale=1.0", :name => "viewport"}/
    %title
      = content_for?(:title) ? yield(:title) : t(".title")
    = csrf_meta_tags
    / Le HTML5 shim, for IE6-8 support of HTML elements
    /[if lt IE 9]
      <script src="http://html5shim.googlecode.com/svn/trunk/html5.js" type="text/javascript"></script>
    %link{:href => "//cloud.webtype.com/css/fa41b746-9201-4f1c-ab4a-a330eb0afb96.css", :rel => "stylesheet", :type => "text/css"}/
    = stylesheet_link_tag "velvet", media: "all"
    = favicon_link_tag '/favicon.ico'
    %link{:href => "/images/apple-touch-icon.png", :rel => "apple-touch-icon"}/
    %link{:href => "/images/apple-touch-icon-72x72.png", :rel => "apple-touch-icon", :sizes => "72x72"}/
    %link{:href => "/images/apple-touch-icon-114x114.png", :rel => "apple-touch-icon", :sizes => "114x114"}/
    = yield(:head)
    = javascript_include_tag "vendor/modernizr"
    <script src="//use.typekit.net/ilh7iri.js"></script>
    <script>try{Typekit.load();}catch(e){}</script>
  %body{:class => "#{controller_name} #{[controller_name, action_name] * '-'}"}
    %center
      / = render "shared/actionbar"
    = yield
    / = render 'shared/helpful_share' if action_name != "index"
    = render 'shared/footer'
    #scripts
      / = javascript_include_tag "support"
      - if Rails.env.production?
        = render 'shared/google_analytics'
        = render 'shared/tawk'
      = yield :javascript
