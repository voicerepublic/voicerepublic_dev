- content_for :title do
  = t('.title')

- content_for :javascript do
  = render partial: 'config'

- form_opts = { 'ng-controller' => 'FormController' }
= simple_form_for(@talk, url: uploads_path, html: form_opts) do |f|
  = render partial: "fields", locals: { f: f }

  .form-save-row.row
    .medium-12.columns
      = link_to t('helpers.links.cancel'), :back, class: 'button-cancel right'
      = f.button :submit, class: 'button-save right',
                          'ng-disabled' => '!valid()',
                          'ng-click' => 'deactivateSafetynet()'

      .eagle.right(style='margin: 9px')
        %i.icon-info
        = t('.billing_notice')
