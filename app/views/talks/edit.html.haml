- content_for :title do
  = t('.title', title: @talk.title)

- form_opts = { 'ng-controller' => 'FormController' }
= simple_form_for(@talk, html: form_opts) do |f|

  = render partial: "fields", locals: { f: f, form_title: t('.edit_talk') }

  .form-save-row.row.collapsed
    .medium-12.columns.text-center
      = link_to t('.delete_talk'), @talk, delete_params
      = link_to t('helpers.links.cancel'), :back, class: 'button-cancel button hollow muted btn-hover-red'
      = f.button :submit, class: 'button-save right',
                          'ng-disabled' => '!valid()',
                          'ng-click' => 'deactivateSafetynet()'
