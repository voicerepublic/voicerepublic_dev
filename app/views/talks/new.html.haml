- content_for :title do
  = t('.title')


= render "dryrun" if @talk.dryrun?

- form_opts = { 'ng-controller' => 'FormController' }
= simple_form_for(@talk, html: form_opts) do |f|
  = render partial: "fields", locals: { f: f, form_title: t('.schedule_a_talk') }

  .form-save-row.row
    .medium-12.columns
      = link_to t('helpers.links.cancel'), :back, class: 'button-cancel right button large hollow secondary'
      = f.button :submit, class: 'button-save right button large',
                          'ng-disabled' => '!valid()',
                          'ng-click' => 'deactivateSafetynet()'

      - unless @talk.dryrun?
        .eagle.right(style='margin: 9px')
          %i.icon-info
          = t('.billing_notice')
#sticky-progress
  .progress-text
    %span= t('.progress_text')
  .progress{"aria-valuemax" => "100", "aria-valuemin" => "0", "aria-valuenow" => "30", :role => "progressbar", :tabindex => "0"}
    .progress-meter{"style" => "width:25%"}